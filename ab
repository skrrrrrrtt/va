-- PLS DONATE Auto Booth + Jump Thank + Anti-AFK Script
-- Made with love for the community <3
-- Works on most executors (Synapse, Krnl, Fluxus, Delta, etc.)

local Players = game:GetService("Players")
local RunService = game:GetService("RunService")
local TweenService = game:GetService("TweenService")
local VirtualUser = game:GetService("VirtualUser")

local LocalPlayer = Players.LocalPlayer
local Character = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
local Humanoid = Character:WaitForChild("Humanoid")

-- Config
local JUMP_MESSAGE = "THANK YOU SO MUCH!! ❤️❤️" -- Change if you want
local THANK_DELAY = 0.5
local AUTO_CLAIM_BOOTH = true
local ANTI_AFK = true

-- Anti-AFK (moves mouse slightly every 3 minutes)
if ANTI_AFK then
    spawn(function()
        while wait(180) do -- Every 3 minutes
            VirtualUser:CaptureController()
            VirtualUser:ClickButton2(Vector2.new())
        end
    end)
end

-- Auto Claim Empty Booth
local function claimBooth()
    if not AUTO_CLAIM_BOOTH then return end
    
    for _, booth in pairs(workspace:WaitForChild("Booths"):GetChildren()) do
        if booth:FindFirstChild("Owner") and booth.Owner.Value == nil then
            -- Stand found & empty
            local claimPart = booth:FindFirstChild("Claim")
            if claimPart then
                fireclickdetector(claimPart:FindFirstChildOfClass("ClickDetector"))
                print("Claimed booth: " .. booth.Name)
                wait(2)
                -- Teleport to booth
                if Character and Character:FindFirstChild("HumanoidRootPart") then
                    Character.HumanoidRootPart.CFrame = booth:FindFirstChild("Stand").CFrame * CFrame.new(0, 5, 0)
                end
                break
            end
        end
    end
end

-- Jump + Thank You when donated
LocalPlayer:WaitForChild("PlayerGui")
local gui = LocalPlayer.PlayerGui:WaitForChild("MainGui")

local function onDonation()
    spawn(function()
        wait(THANK_DELAY)
        if Character and Character:FindFirstChild("Humanoid") then
            -- Say thank you
            game:GetService("ReplicatedStorage").Events.Claim:FireServer(JUMP_MESSAGE)
            
            -- Jump 3 times
            for i = 1, 3 do
                Humanoid:ChangeState(Enum.HumanoidStateType.Jumping)
                wait(0.4)
            end
        end
    end)
end

-- Detect donation (watch Raised value change)
spawn(function()
    while wait(1) do
        pcall(function()
            local raised = LocalPlayer:WaitForChild("leaderstats"):WaitForChild("Raised").Value
            LocalPlayer.leaderstats.Raised.Changed:Connect(function(newValue)
                if newValue > raised then
                    onDonation()
                end
            end)
        end)
    end
end)

-- Try to claim booth on start & respawn
claimBooth()

LocalPlayer.CharacterAdded:Connect(function(newChar)
    Character = newChar
    Humanoid = newChar:WaitForChild("Humanoid")
    wait(3)
    claimBooth()
end)

print("PLS DONATE Auto Booth + Jump Thank You + Anti-AFK Loaded!")
game.StarterGui:SetCore("SendNotification", {
    Title = "Script Loaded";
    Text = "Auto booth + Jump thank you + Anti-AFK active!";
    Duration = 5;
})
